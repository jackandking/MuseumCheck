{
  "name": "museum-check",
  "version": "2.1.3",
  "description": "Museum Checklist Web Application - 博物馆打卡应用",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "python3 -m http.server 8000"
  },
  "keywords": ["museum", "checklist", "education", "travel", "china"],
  "author": "jackandking",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "script.js",
      "!**/node_modules/**"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}